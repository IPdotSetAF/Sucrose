<Page
    x:Class="Sucrose.Portal.Views.Pages.Library.EmptyLibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource Portal.EmptyLibraryPage.Title}"
    AllowDrop="True"
    mc:Ignorable="d">

    <ScrollViewer
        Margin="10,0,10,0"
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Disabled">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="36"
                FontWeight="Bold"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{DynamicResource Portal.EmptyLibraryPage.TitleText}"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
            <TextBlock
                FontSize="24"
                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                Text="{DynamicResource Portal.EmptyLibraryPage.DescriptionText}"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>
    </ScrollViewer>
</Page>