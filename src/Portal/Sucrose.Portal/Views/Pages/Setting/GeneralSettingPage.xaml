<Page
    x:Class="Sucrose.Portal.Views.Pages.Setting.GeneralSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Sucrose.Portal.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sucrose.Portal.Views.Pages.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vcontrols="clr-namespace:Sucrose.Portal.Views.Controls"
    Title="{DynamicResource Portal.GeneralSettingPage.Title}"
    d:DataContext="{d:DesignInstance local:GeneralSettingPage,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <Grid x:Name="GridSetting" Loaded="GridSetting_Loaded">
        <StackPanel
            x:Name="FrameSetting"
            Margin="10,0,10,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Orientation="Vertical"
            Visibility="Collapsed" />
        <ui:ProgressRing
            x:Name="ProgressSetting"
            Width="100"
            Height="100"
            IsIndeterminate="True" />
    </Grid>
</Page>