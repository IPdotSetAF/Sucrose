<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:String x:Key="Portal.PersonalSettingPage.Title">PersonalSettingPage</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Duration">Aggiornamento Negozio</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Duration.Description">Durata di quanto spesso i temi elencati nel negozio verranno aggiornati.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.StoreStart">Avvio Automatico</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.StoreStart.Description">Se il tema scaricato dal negozio verrà impostato automaticamente come sfondo.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Adult">Contenuto Non Sicuro</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Adult.Description">Se il contenuto contrassegnato come non sicuro (NSFW) nel negozio verrà mostrato o meno.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Confirm">Conferma Cancellazione</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Confirm.Description">Se verrà richiesta una conferma durante l'eliminazione dei temi dalla tua libreria.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Delete">Temi Danneggiati</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Delete.Description">Se i temi danneggiati o mancanti nella tua libreria verranno eliminati automaticamente o meno.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Delete.DeleteHint">Nota: Bisogna fare attenzione in quanto ciò potrebbe causare la perdita di dati.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.LibraryStart">Avvio Automatico</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.LibraryStart.Description">Se il tema creato verrà impostato automaticamente come sfondo.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Preview">Anteprima dei Temi</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Preview.Description">Se l'anteprima verrà mostrata quando si passa sopra ai temi visualizzati.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Preview.StorePreview">Anteprima del Negozio:</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Preview.StorePreviewHide">Nascondi Dettagli:</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Preview.LibraryPreview">Anteprima della Libreria:</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Preview.LibraryPreviewHide">Nascondi Dettagli:</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Theme">Personalizza i Temi</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Theme.Description">Personalizza il nome o la descrizione dei temi visualizzati.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Theme.TitleLength">Lunghezza del Titolo (Caratteri):</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Theme.DescriptionLength">Lunghezza della Descrizione (Caratteri):</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Adaptive">Layout Adattivo</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Adaptive.Description">Personalizza il layout o la distanza tra i temi visualizzati.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Adaptive.AdaptiveMargin">Margine (Pixel):</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Adaptive.AdaptiveLayout">Layout (Numero):</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Sort">Ordina la Libreria</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Sort.Description">Specifica come saranno ordinati e in che formato i temi nella tua libreria.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Sort.SortMode">Modalità di Ordinamento:</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Sort.SortKind">Tipo di Ordinamento:</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Store">Paginazione del Negozio</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Store.Description">Definisci quanti temi saranno presenti in ogni pagina del negozio.</system:String>

    <system:String x:Key="Portal.PersonalSettingPage.Library">Paginazione della Libreria</system:String>
    <system:String x:Key="Portal.PersonalSettingPage.Library.Description">Definisci quanti temi saranno presenti in ogni pagina della tua libreria.</system:String>
</ResourceDictionary>