<ui:FluentWindow
    x:Class="Sucrose.Property.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:Sucrose.Property.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Sucrose.Property.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource Property.WindowTitle}"
    MinWidth="365"
    MinHeight="100"
    MaxWidth="365"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Icon="\Sucrose.Property;component\Assets\ICO.ico"
    Left="-99999"
    Loaded="MainWindow_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Topmost="False"
    WindowBackdropType="None"
    WindowCornerPreference="Default"
    WindowStartupLocation="Manual"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="{DynamicResource Property.WindowTitle}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True"
            MouseDown="TitleBar_MouseDown"
            ShowMaximize="False"
            ShowMinimize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/Icon256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer
            Grid.Row="1"
            Margin="20,10,10,20"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">
                <StackPanel
                    x:Name="Container"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Orientation="Vertical" />
                <Grid
                    Margin="0,14,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom">
                    <ui:Button
                        x:Name="Delete"
                        HorizontalAlignment="Left"
                        Appearance="Secondary"
                        Click="Delete_Click"
                        Cursor="Hand"
                        Icon="{ui:SymbolIcon Delete48}"
                        ToolTipService.ToolTip="Delete Copy - Kopyayı Sil" />

                    <ui:Button
                        x:Name="Refresh"
                        HorizontalAlignment="Center"
                        Appearance="Secondary"
                        Click="Refresh_Click"
                        Cursor="Hand"
                        Icon="{ui:SymbolIcon PaintBrush24}"
                        ToolTipService.ToolTip="Refresh Interface - Arayüzü Yenile" />

                    <ui:Button
                        x:Name="Restore"
                        HorizontalAlignment="Right"
                        Appearance="Secondary"
                        Click="Restore_Click"
                        Cursor="Hand"
                        Icon="{ui:SymbolIcon ArrowCounterclockWise48}"
                        ToolTipService.ToolTip="Restore Default - Varsayılana Döndür" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>