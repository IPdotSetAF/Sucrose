<ui:FluentWindow
    x:Class="Sucrose.Property.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Sucrose.Property.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource Property.WindowTitle}"
    MinWidth="365"
    MinHeight="100"
    MaxWidth="365"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="False"
    Icon="\Sucrose.Property;component\Assets\ICO.ico"
    ResizeMode="NoResize"
    SizeToContent="Height"
    Topmost="False"
    WindowBackdropType="None"
    WindowCornerPreference="Default"
    WindowStartupLocation="Manual"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="{DynamicResource Property.WindowTitle}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True"
            MouseDown="TitleBar_MouseDown"
            ShowMaximize="False"
            ShowMinimize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/Icon256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer
            Grid.Row="1"
            Margin="20,10,10,20"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel
                Margin="0,0,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Orientation="Vertical">

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Puddle Radius" />
                <Slider
                    Margin="0,0,0,10"
                    Cursor="Hand"
                    IsSnapToTickEnabled="True"
                    Maximum="100"
                    Minimum="0"
                    TickFrequency="1"
                    TickPlacement="None"
                    Value="50" />

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Location" />
                <ui:TextBox
                    Margin="0,0,0,10"
                    PlaceholderEnabled="True"
                    PlaceholderText="City, Country"
                    Text="Ankara, Turkey" />

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Price" />
                <ui:NumberBox
                    Margin="0,0,0,10"
                    MaxDecimalPlaces="2"
                    Maximum="100"
                    Minimum="0"
                    PlaceholderEnabled="True"
                    PlaceholderText="12.98"
                    Value="50.00" />

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="API Key" />
                <ui:PasswordBox
                    Margin="0,0,0,10"
                    Password="Sucrose Wallpaper Engine"
                    PlaceholderEnabled="True"
                    PlaceholderText="Enter a password" />

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Scaling" />
                <ComboBox Margin="0,0,0,10" SelectedIndex="3">
                    <ComboBoxItem Content="None" />
                    <ComboBoxItem Content="Fill" />
                    <ComboBoxItem Content="Uniform" />
                    <ComboBoxItem Content="UniformToFill" />
                </ComboBox>

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Background" />
                <Grid Margin="0,0,0,10" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        SelectedIndex="0">
                        <ComboBoxItem Content="BigMountain.jpeg" />
                        <ComboBoxItem Content="VintageVillage.jpg" />
                    </ComboBox>
                    <ui:Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        Appearance="Secondary"
                        Cursor="Hand"
                        Icon="{ui:SymbolIcon Open48}" />
                </Grid>

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Overlay Color" />
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <Grid>
                        <ui:DropDownButton
                            x:Name="DropDown"
                            Click="DropDownButton_Click"
                            Content="         "
                            Cursor="Hand"
                            Icon="{ui:SymbolIcon EyeDropper24}" />
                        <Rectangle
                            Width="30"
                            Margin="35,1,0,1"
                            HorizontalAlignment="Left"
                            IsEnabled="false"
                            IsHitTestVisible="False"
                            RadiusX="5"
                            RadiusY="5">
                            <Rectangle.Fill>
                                <SolidColorBrush x:Name="SCB" Color="DodgerBlue" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>

                    <Popup>
                        <hc:ColorPicker Name="ColorPicker" />
                    </Popup>
                </StackPanel>

                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops"
                    FontSize="16"
                    IsChecked="True" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 1"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 2"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 3"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 4"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 5"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 6"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 7"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 8"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 9"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 10"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 11"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 12"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 13"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 14"
                    FontSize="16"
                    IsChecked="False" />
                <CheckBox
                    Margin="0,0,0,5"
                    HorizontalAlignment="Stretch"
                    Content="Random Drops 15"
                    FontSize="16"
                    IsChecked="False" />

                <ui:TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Text="Click to Update" />
                <ui:Button
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    Appearance="Secondary"
                    Content="Refresh"
                    Cursor="Hand" />

                <ui:Button
                    x:Name="Refresh"
                    Margin="0,14,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Appearance="Secondary"
                    Cursor="Hand"
                    Icon="{ui:SymbolIcon ArrowCounterclockWise48}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>