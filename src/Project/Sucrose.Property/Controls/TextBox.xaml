<UserControl
    x:Class="Sucrose.Property.Controls.TextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sucrose.Property.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="Auto"
    Height="Auto"
    Margin="0,0,0,10"
    mc:Ignorable="d">
    <ui:TextBox
        x:Name="Component"
        PlaceholderEnabled="True"
        PlaceholderText="{Binding Hint, RelativeSource={RelativeSource AncestorType=UserControl}}"
        Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
        ToolTipService.ToolTip="{Binding Help, RelativeSource={RelativeSource AncestorType=UserControl}}" />
</UserControl>