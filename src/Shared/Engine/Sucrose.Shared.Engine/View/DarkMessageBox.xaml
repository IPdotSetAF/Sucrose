<Window
    x:Class="Sucrose.Shared.Engine.View.DarkMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sucrose.Shared.Engine.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DialogTitle"
    Width="600"
    Height="300"
    MinWidth="600"
    MinHeight="300"
    Loaded="DarkMessageBox_Loaded"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="#FF707070" />
            <Setter Property="Background" Value="#FF292929" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF393939" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF848484" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF2B2B2B" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Margin="20"
            Background="#FF292929"
            BorderBrush="#FF707070"
            BorderThickness="1"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    Direction="315"
                    Opacity="0.7"
                    ShadowDepth="3"
                    Color="#888888" />
            </Border.Effect>
            <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock
                        x:Name="Dialog_Info"
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="DialogInfo" />
                    <TextBox
                        x:Name="Dialog_Message"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="White"
                        IsReadOnly="True"
                        Text="DialogMessage"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button
            x:Name="Download_Button"
            Grid.Row="1"
            Width="100"
            Height="25"
            Margin="20,0,0,20"
            HorizontalAlignment="Left"
            Click="DownloadButton_Click"
            Content="Download"
            Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect
                    Direction="315"
                    Opacity="0.7"
                    ShadowDepth="3"
                    Color="#888888" />
            </Button.Effect>
        </Button>
        <Button
            x:Name="Continue_Button"
            Grid.Row="1"
            Width="100"
            Height="25"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            Click="ContinueButton_Click"
            Content="Continue"
            Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect
                    Direction="315"
                    Opacity="0.7"
                    ShadowDepth="3"
                    Color="#888888" />
            </Button.Effect>
        </Button>
        <Button
            x:Name="Close_Button"
            Grid.Row="1"
            Width="100"
            Height="25"
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            Click="CloseButton_Click"
            Content="Close"
            Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect
                    Direction="315"
                    Opacity="0.7"
                    ShadowDepth="3"
                    Color="#888888" />
            </Button.Effect>
        </Button>
    </Grid>

    <Window.Effect>
        <DropShadowEffect
            Direction="315"
            Opacity="0.5"
            ShadowDepth="10"
            Color="#888888" />
    </Window.Effect>
</Window>