<Window
    x:Class="Sucrose.Shared.Launcher.View.LightReportBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sucrose.Shared.Launcher.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource Launcher.ReportWindowTitle}"
    Width="300"
    Height="200"
    MinWidth="300"
    MinHeight="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#F5F5F5" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Margin="20"
            Background="#F0F0F0"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    Direction="315"
                    Opacity="0.7"
                    ShadowDepth="3"
                    Color="#888888" />
            </Border.Effect>
            <Grid>
                <Button
                    x:Name="Create_Button"
                    Height="25"
                    Margin="20"
                    VerticalAlignment="Top"
                    Click="CreateButton_Click"
                    Content="{DynamicResource Launcher.CreateLogText}"
                    Cursor="Hand"
                    Style="{StaticResource SucroseLightButton}">
                    <Button.Effect>
                        <DropShadowEffect
                            Direction="315"
                            Opacity="0.7"
                            ShadowDepth="3"
                            Color="#888888" />
                    </Button.Effect>
                </Button>
                <Button
                    x:Name="Report_Button"
                    Height="25"
                    Margin="20"
                    VerticalAlignment="Bottom"
                    Click="ReportButton_Click"
                    Content="{DynamicResource Launcher.OpenReportText}"
                    Cursor="Hand"
                    Style="{StaticResource SucroseLightButton}">
                    <Button.Effect>
                        <DropShadowEffect
                            Direction="315"
                            Opacity="0.7"
                            ShadowDepth="3"
                            Color="#888888" />
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
    <Window.Effect>
        <DropShadowEffect
            Direction="315"
            Opacity="0.5"
            ShadowDepth="10"
            Color="#888888" />
    </Window.Effect>
</Window>