<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUIExSample.Pages.Dialogs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUIExSample.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Padding="10"
            Background="{ThemeResource SemiTransparentBackgroundBrush}"
            CornerRadius="10">
            <TextBlock
                Margin="0,-10,0,0"
                FontFamily="Segoe UI"
                FontSize="32"
                FontWeight="Light"
                Text="Dialog Helpers" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Padding="10"
            Background="{ThemeResource SemiTransparentBackgroundBrush}"
            CornerRadius="10">
            <Button Click="ShowDialog_Click" Content="Show dialog" />
            <Button Click="ShowDialog2_Click" Content="Show OK/Cancel" />
            <Button Click="ShowDialog3_Click" Content="Show 3-option dialog" />
            <TextBlock x:Name="resultText" />
        </StackPanel>
    </Grid>
</Page>
